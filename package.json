{
  "name": "worktree-cli",
  "version": "0.0.1",
  "type": "module",
  "description": "A modern CLI tool for managing git worktrees with stack visualization",
  "bin": {
    "worktree": "./dist/index.js"
  },
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target bun --format esm",
    "build:prod": "bun build src/index.ts --target bun --compile --outfile dist/worktree",
    "dev": "bun run src/index.ts",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@clack/prompts": "^0.7.0",
    "picocolors": "^1.0.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.0.0"
  }
}
