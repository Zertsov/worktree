{
  "name": "stacks-cli",
  "version": "0.1.0",
  "type": "module",
  "description": "A modern CLI for managing stacked diffs with git",
  "bin": {
    "stacks": "./dist/index.js"
  },
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target bun --format esm",
    "build:prod": "bun build src/index.ts --target bun --compile --outfile dist/stacks",
    "build:macos-arm64": "bun build src/index.ts --target bun-darwin-arm64 --compile --outfile dist/stacks-macos-arm64",
    "build:macos-x64": "bun build src/index.ts --target bun-darwin-x64 --compile --outfile dist/stacks-macos-x64",
    "build:linux-x64": "bun build src/index.ts --target bun-linux-x64 --compile --outfile dist/stacks-linux-x64",
    "build:all": "bun run build:macos-arm64 && bun run build:macos-x64 && bun run build:linux-x64",
    "dev": "bun run src/index.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@clack/prompts": "^0.7.0",
    "neverthrow": "^8.2.0",
    "picocolors": "^1.0.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.0.0"
  }
}
